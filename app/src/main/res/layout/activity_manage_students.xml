<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header Title -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="215dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/gambar1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="272dp"
        android:layout_height="244dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="103dp"
        android:src="@drawable/bg1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Kelola Siswa"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:fontFamily="serif"
        android:layout_marginTop="16dp" />

    <!-- Button to add student -->
    <Button
        android:id="@+id/btnTambahSiswa"
        android:layout_width="364dp"
        android:layout_height="58dp"
        android:backgroundTint="#50C2C9"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="Tambah Siswa"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white" />

    <!-- Button to list students -->
    <Button
        android:id="@+id/btnDaftarSiswa"
        android:layout_width="364dp"
        android:layout_height="58dp"
        android:layout_below="@id/btnTambahSiswa"
        android:layout_centerHorizontal="true"
        android:text="Daftar Siswa"
        android:backgroundTint="#50C2C9"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp" />


</RelativeLayout>
