<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="215dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-23dp"
        android:src="@drawable/gambar1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="281dp"
        android:layout_height="287dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="106dp"
        android:src="@drawable/gambar3"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Kelola Siswa"
        android:fontFamily="serif"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="20dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnAddAbsen"
        android:layout_width="364dp"
        android:layout_height="58dp"
        android:backgroundTint="#50C2C9"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="20dp"
        android:text="Add Absen"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnViewAbsen"
        android:layout_width="364dp"
        android:layout_height="58dp"
        android:backgroundTint="#50C2C9"
        android:layout_below="@id/btnAddAbsen"
        android:layout_centerHorizontal="true"
        android:text="View Absen" />

</RelativeLayout>
